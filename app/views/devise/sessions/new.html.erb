
<div class="max-w-xs my-5 w-full mx-auto flex flex-col justify-center items-center">
  <div class="flex flex-col justify-center items-centerbg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="font-shippori text-2xl flex justify-center mt-3 mb-5">
      <h2>ログイン</h2>
      <p class="alert"><%= alert %></p>
    </div>
    <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class: "text-gray-700 text-sm font-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>
  <div class="field mb-6">
    <%= f.label :password, class: "text-gray-700 text-sm font-bold" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex justify-center mt-10">
    <%= f.submit "Log in", class: "font-gothic-new rounded-md bg-sky-500 px-2 py-1 text-lg font-medium text-white ring-1 ring-inset ring-sky-500 hover:bg-sky-400" %>
  </div>
<% end %>
  </div>
</div>
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>

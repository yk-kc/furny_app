<div class="font-gothic-new max-w-xs w-full mx-auto mt-16">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mt-3 mb-5 text-center">
      <h2 class="text-2xl">ログイン</h2>
      <p><%= flash[:notice] %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class: "text-gray-700 text-sm font-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>
    <div class="field mb-6">
      <%= f.label :password, class: "text-gray-700 text-sm font-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions flex justify-center mt-10">
      <%= f.submit "Log in", class: "rounded-md bg-sky-500 px-16 py-1 text-lg font-medium text-white ring-1 ring-inset ring-sky-500 cursor-pointer" %>
    </div>
  <% end %>
    </div>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>

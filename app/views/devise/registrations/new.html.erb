<div class="font-gothic-new max-w-xs w-full mx-auto mt-16">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="text-2xl mt-3 mb-5 text-center">
      <h2>アカウント登録</h2>
      <p><%= flash[:notice] %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-2">
      <%= f.label :name, "表示名", class: "text-gray-700 text-sm font-bold" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>

    <div class="field mb-2">
      <%= f.label :username, class: "text-gray-700 text-sm font-bold" %>
      <em>(半角英数字6文字以上、あとから変更できません)</em>
      <%= f.text_field :username, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>

    <div class="field mb-2">
      <%= f.label :email, class: "text-gray-700 text-sm font-bold" %>
      <%= f.email_field :email, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>

    <div class="field mb-2">
      <%= f.label :password, class: "text-gray-700 text-sm font-bold" %>
      <% if @minimum_password_length %>
      <em>(半角英数字<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>

    <div class="field mb-2">
      <%= f.label :password_confirmation, "確認用パスワード", class: "text-gray-700 text-sm font-bold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline mt-2" %>
    </div>

    <div class="actions flex justify-center mt-10">
      <%= f.submit "Sign up", class: "font-gothic-new rounded-md bg-emerald-400 px-16 py-1 font-medium text-white ring-1 ring-inset ring-green-600/20 hover:bg-emerald-300 cursor-pointer" %>
    </div>
    <% end %>
    </div>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>




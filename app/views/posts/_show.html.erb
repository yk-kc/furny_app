<div class="flex">
  <!-- Slider main container -->
  <div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper w-6/12 h-[750px]">
      <!-- Slides -->
      <% post.images.each do |image| %>
        <%= image_tag image, class: "swiper-slide aspect-square w-full object-contain" %>
      <% end %>
    </div>
    <!-- pagination -->
    <div class="swiper-pagination"></div>

    <!-- navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

  <div>
    <div class="flex">
      <%= image_tag post.user.get_profile_image(65,65), class: "rounded-full mt-2.5" %>
      <p>表示名：<%= post.user.name %></p>
      <p>username：<%= post.user.username %></p>
    </div>
    <p>ショップ名：<%= post.furniture_name %></p>
    <p>説明：<%= post.caption %></p>
    <p>投稿日時：<%= post.created_at.strftime('%Y/%m/%d') %></p>
    <% if post.user == current_user || current_user.admin? %>
    <%= link_to "削除", post_path(post), method: :delete, class: "bg-red-600 hover:bg-red-500 text-white rounded px-4 py-1" %>
    <% end %>
    <%= render 'favorites/btn', post: post %>
    <p><%= render 'bookmarks/btn', post: post %></p>
    <p>コメント件数：<%= post.post_comments.count %></p>
    <div id="new-comments">
    <%= render 'post_comments/index', post: post %>
    </div>
    <div id="comments-area">
    <%= render 'post_comments/form', post: post, post_comment: post_comment %>
    </div>
    </div>


</div>
<%= render 'layouts/sidebar' %>

<div class="w-64 shrink-0"></div>

<div class="font-gothic-new w-full h-full flex flex-wrap justify-center">

  <div class="w-full text-center mt-10 mb-8">
    <p>検索結果一覧</p>
    <% @posts.tag.each do |tag| %>
      <div class="balloon relative w-[30px] h-3 inline-block border border-zinc-300 mr-2 align-middle" style="background-color: <%= @color_map[tag.name.to_sym] %>;">
        <span class="tag-text absolute hidden p-[2px] bg-zinc-200 w-[95px] text-center text-[80%] left-[30%] bottom-[100%] mb-[12px] rounded-lg"><%= tag.name %></span>
      </div>
    <% end %>
  </div>

  <%= render 'posts/index', posts: @posts %>

  <!--モーダルの周囲を薄暗くするマスク-->
  <div id="mask" class="hidden"></div>
  <!--モーダル-->
  <!--あとからJavaScriptで<div>内のコードをshowビューのコードに置き換えます。-->
  <div id="modal" class="hidden">
    <p>モーダルウィンドウ<p>
  </div>
</div>

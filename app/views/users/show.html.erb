<%= render 'layouts/sidebar' %>
<div class="w-full pl-64">
<div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.username %></h3>
  <%= image_tag @user.get_profile_image(60,60) %>
  <% if @user.name != "guestuser" %>
  <%= render "relationships/btn", user: @user %>
  <p><%= link_to user_followings_path(@user) do %>
    フォロー <%= @user.followings.count %>
  <% end %></p>
  <p><%= link_to user_followers_path(@user) do %>
    フォロワー <%= @user.followers.count %>
  <% end %></p>
  <p><%= @user.introduction %></p>
    <% if @user == current_user || current_user.admin? %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.images[0], size:'120x120' %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(60,60) %></p>
  <p>ショップ名：<%= post.furniture_name %></p>
  <p>説明：<%= post.caption %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p><%= render 'favorites/btn', post: post %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>

</div>
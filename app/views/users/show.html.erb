<%= render 'layouts/sidebar' %>

<div class="w-64 shrink-0"></div>

<div class="font-gothic-new w-full h-full flex flex-wrap justify-center">
  <div class="w-full">

  <div class="flex w-full">
  <%= image_tag @user.get_profile_image(210,210), class: "rounded-full  border border-stone-500" %>
    <div class="w-full">
      <div class="inline-block">
        <p class="font-medium text-[20px] pt-[14px]"><%= @user.name %></p>
        <p class="text-[15px] text-neutral-500"><%= @user.username %></p>
      </div>

      <div class="inline-block">
        <%= render "relationships/btn", user: @user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      </div>
    </div>
    <div class="w-full">

      <% if @user.name != "guestuser" %>
      <p><%= link_to user_followings_path(@user) do %>
        フォロー <%= @user.followings.count %>
      <% end %></p>
      <p><%= link_to user_followers_path(@user) do %>
        フォロワー <%= @user.followers.count %>
      <% end %></p>
      <p><%= @user.introduction %></p>
        <% if @user == current_user || current_user.admin? %>
        <% end %>
      <% end %>
      <p>
        <%= link_to 'いいね一覧', user_favorites_path(@user) %>
        <%= link_to 'Bookmark一覧', user_bookmarks_path(@user) %>
      </p>
    </div>
  </div>
</div>

<!-- ユーザーの投稿一覧 -->
<%= render 'posts/index', posts: @posts %>

</div>
</div>
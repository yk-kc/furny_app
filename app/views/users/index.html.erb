<%= render 'layouts/sidebar' %>
<div class="font-gothic-new min-h-full text-left">
  <h1 class="font-bold my-10">管理者専用ページ</h1>

  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <% sum = 0 %>
        <% @users.each do |u| %>
          <div class="border">
            <p>メアド:<%= u.email %></p>
            <p>名前:<%= u.name %>さん</p>
          </div>
          <% sum += 1 %>
        <% end %>
        <!--<p><%#= paginate @users %></p>-->
        <p>登録者合計：<%= sum %></p>
    <% end %>
  <% end %>
</div>